generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Document statuses aligned with spec: Draft, Waiting, Ready, Done, Canceled
enum DocumentStatus {
  draft
  waiting
  ready
  done
  cancelled
}

model User {
  id           Int      @id @default(autoincrement())
  name         String?
  email        String   @unique
  passwordHash String
  role         String   @default("warehouse_staff") // inventory_manager | warehouse_staff
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // relations
  receiptsCreated    Receipt[]
  deliveriesCreated  Delivery[]
  transfersCreated   Transfer[]
  adjustmentsCreated Adjustment[]
  stockMovesCreated  StockMove[]
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

// ------------------------ Inventory Models ------------------------

model Product {
  id           Int      @id @default(autoincrement())
  sku          String   @unique
  name         String
  description  String?
  uom          String // unit of measure, e.g., 'pcs', 'kg'
  defaultPrice Decimal  @db.Decimal(12, 2)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // relations
  stockQuants     StockQuant[]
  stockMoves      StockMove[]
  receiptLines    ReceiptLine[]
  deliveryLines   DeliveryLine[]
  transferLines   TransferLine[]
  adjustmentLines AdjustmentLine[]

  category     Category?     @relation(fields: [categoryId], references: [id])
  categoryId   Int?
  reorderRules ReorderRule[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  parentId  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
}

model ReorderRule {
  id          Int       @id @default(autoincrement())
  product     Product   @relation(fields: [productId], references: [id])
  productId   Int
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId Int
  minQty      Decimal   @db.Decimal(18, 4)
  maxQty      Decimal?  @db.Decimal(18, 4)
  createdAt   DateTime  @default(now())

  @@unique([productId, warehouseId])
}

model Warehouse {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  name      String
  address   String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locations      Location[]
  stockQuants    StockQuant[]
  receipts       Receipt[]
  deliveries     Delivery[]
  transfersFrom  Transfer[]    @relation("TransferFrom")
  transfersTo    Transfer[]    @relation("TransferTo")
  adjustments    Adjustment[]
  stockMovesFrom StockMove[]   @relation("MoveFromWarehouse")
  stockMovesTo   StockMove[]   @relation("MoveToWarehouse")
  reorderRules   ReorderRule[]
}

model Location {
  id          Int       @id @default(autoincrement())
  code        String
  name        String
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId Int
  parentId    Int?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  stockQuants    StockQuant[]
  stockMovesFrom StockMove[]  @relation("MoveFromLocation")
  stockMovesTo   StockMove[]  @relation("MoveToLocation")

  @@unique([code, warehouseId])
}

model StockQuant {
  id          Int       @id @default(autoincrement())
  product     Product   @relation(fields: [productId], references: [id])
  productId   Int
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId Int
  location    Location? @relation(fields: [locationId], references: [id])
  locationId  Int?
  quantity    Decimal   @default("0") @db.Decimal(18, 4)
  reserved    Decimal   @default("0") @db.Decimal(18, 4)
  incoming    Decimal   @default("0") @db.Decimal(18, 4)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([productId, warehouseId, locationId])
}

model Receipt {
  id          Int            @id @default(autoincrement())
  receiptNo   String         @unique
  reference   String?
  warehouse   Warehouse      @relation(fields: [warehouseId], references: [id])
  warehouseId Int
  partner     String?
  status      DocumentStatus @default(draft)
  createdBy   User?          @relation(fields: [createdById], references: [id])
  createdById Int?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  lines ReceiptLine[]
}

model ReceiptLine {
  id        Int      @id @default(autoincrement())
  receipt   Receipt  @relation(fields: [receiptId], references: [id])
  receiptId Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Decimal  @db.Decimal(18, 4)
  uom       String
  unitPrice Decimal? @db.Decimal(12, 2)
}

model Delivery {
  id          Int            @id @default(autoincrement())
  deliveryNo  String         @unique
  reference   String?
  warehouse   Warehouse      @relation(fields: [warehouseId], references: [id])
  warehouseId Int
  partner     String?
  status      DocumentStatus @default(draft)
  createdBy   User?          @relation(fields: [createdById], references: [id])
  createdById Int?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  lines DeliveryLine[]
}

model DeliveryLine {
  id         Int      @id @default(autoincrement())
  delivery   Delivery @relation(fields: [deliveryId], references: [id])
  deliveryId Int
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
  quantity   Decimal  @db.Decimal(18, 4)
  uom        String
  unitPrice  Decimal? @db.Decimal(12, 2)
}

model Transfer {
  id              Int            @id @default(autoincrement())
  transferNo      String         @unique
  reference       String?
  fromWarehouse   Warehouse      @relation("TransferFrom", fields: [fromWarehouseId], references: [id])
  fromWarehouseId Int
  toWarehouse     Warehouse      @relation("TransferTo", fields: [toWarehouseId], references: [id])
  toWarehouseId   Int
  status          DocumentStatus @default(draft)
  createdBy       User?          @relation(fields: [createdById], references: [id])
  createdById     Int?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  lines TransferLine[]
}

model TransferLine {
  id         Int      @id @default(autoincrement())
  transfer   Transfer @relation(fields: [transferId], references: [id])
  transferId Int
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
  quantity   Decimal  @db.Decimal(18, 4)
  uom        String
}

model Adjustment {
  id           Int            @id @default(autoincrement())
  adjustmentNo String         @unique
  warehouse    Warehouse      @relation(fields: [warehouseId], references: [id])
  warehouseId  Int
  reason       String?
  status       DocumentStatus @default(draft)
  createdBy    User?          @relation(fields: [createdById], references: [id])
  createdById  Int?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  lines AdjustmentLine[]
}

model AdjustmentLine {
  id           Int        @id @default(autoincrement())
  adjustment   Adjustment @relation(fields: [adjustmentId], references: [id])
  adjustmentId Int
  product      Product    @relation(fields: [productId], references: [id])
  productId    Int
  quantity     Decimal    @db.Decimal(18, 4) // positive or negative adjustment
  uom          String
  note         String?
}

// StockMove represents physical changes to quants â€” incoming, outgoing, internal
model StockMove {
  id              Int            @id @default(autoincrement())
  moveNo          String?        @unique
  product         Product        @relation(fields: [productId], references: [id])
  productId       Int
  quantity        Decimal        @db.Decimal(18, 4)
  uom             String
  fromWarehouse   Warehouse?     @relation("MoveFromWarehouse", fields: [fromWarehouseId], references: [id])
  fromWarehouseId Int?
  toWarehouse     Warehouse?     @relation("MoveToWarehouse", fields: [toWarehouseId], references: [id])
  toWarehouseId   Int?
  fromLocation    Location?      @relation("MoveFromLocation", fields: [fromLocationId], references: [id])
  fromLocationId  Int?
  toLocation      Location?      @relation("MoveToLocation", fields: [toLocationId], references: [id])
  toLocationId    Int?
  reason          String?
  reference       String?
  documentType    String?
  documentId      Int?
  status          DocumentStatus @default(done)
  createdBy       User?          @relation(fields: [createdById], references: [id])
  createdById     Int?
  createdAt       DateTime       @default(now())
}
